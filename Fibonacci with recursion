#include<iostream>
#include<bits/stdc++.h>
using namespace std;
int prime(int n)
{
    int i,temp=0;
    for(i=2; i*i<=n; i++)
    {
        if(n%i==0)
        {
            temp=1;
            break;
        }
    }
    if(n==0||n==1) temp=1;
    if(temp==1)
    cout<<"Khamosh! Ei number ti Prime noy! -_- ";
    if(temp==0)
    cout<<"Ei shei Prime Number! ^_^";
}

int main()
{
    int n;
    cout<<"Enter the number to check if it is prime or not : ";
    cin>>n;
    cout<<prime(n);

}
